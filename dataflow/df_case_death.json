{
	"name": "df_case_death",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_raw_case_death",
						"type": "DatasetReference"
					},
					"name": "CaseAndDeath"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "filterCaseDeathData"
				},
				{
					"name": "selectRawcaseDeathData"
				},
				{
					"name": "pivotCount"
				}
			],
			"scriptLines": [
				"source(output(",
				"          country as string,",
				"          country_code as string,",
				"          continent as string,",
				"          population as integer,",
				"          indicator as string,",
				"          daily_count as integer,",
				"          date as date,",
				"          rate_14_day as double,",
				"          source as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> CaseAndDeath",
				"CaseAndDeath filter(continent=='Europe' && not(isNull(country_code))) ~> filterCaseDeathData",
				"filterCaseDeathData select(mapColumn(",
				"          country,",
				"          country_code,",
				"          continent,",
				"          population,",
				"          indicator,",
				"          daily_count,",
				"          date,",
				"          rate_14_day,",
				"          source,",
				"          case_indicator = indicator",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectRawcaseDeathData",
				"selectRawcaseDeathData pivot(columnNaming: '$N$V',",
				"     lateral: true) ~> pivotCount"
			]
		}
	}
}